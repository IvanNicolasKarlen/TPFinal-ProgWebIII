@model TPFinalProgWebIII.Models.View.Registro
@using BotDetect.Web.Mvc;
@{ MvcCaptcha Captcha = new MvcCaptcha("Captcha"); }


<div>
    <p>
        <h2> No tienes una cuenta? 
            crea una aquí </h2>
  
    </p>
</div>
@if (ViewData["MensajeOK"] != null)
{
    <div class="alert alert-success text-center" role="alert">
        @ViewData["MensajeOK"]
    </div>

}
 

<div class="centrado">
    <div class="fondo_formu">
        <div class="recuadre">

            @using (@Html.BeginForm("Procesar-Registro", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                @Html.LabelFor(model => model.Nombre)<br />
                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })<br />
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })<br />

                @Html.LabelFor(model => model.Apellido)<br />
                @Html.TextBoxFor(model => model.Apellido, new { @class = "form-control" })<br />
                @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })<br />

                @Html.LabelFor(model => model.Email)<br />
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })<br />
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })<br />

                @Html.LabelFor(model => model.Contrasenia)<br />
                @Html.PasswordFor(model => model.Contrasenia, new { @class = "form-control" })<br />
                @Html.ValidationMessageFor(model => model.Contrasenia, "", new { @class = "text-danger" })<br />

                @Html.LabelFor(model => model.ConfirmarContrasenia)<br />
                @Html.PasswordFor(model => model.ConfirmarContrasenia, new { @class = "form-control" })<br />
                @Html.ValidationMessageFor(model => model.ConfirmarContrasenia, "", new { @class = "text-danger" })<br /><br />

                @Html.Captcha(Captcha)<br /><br />
                <text>Ingrese el captcha</text><br />
                @Html.TextBox("CaptchaCode","", new { @class = "form-control" })<br />
                @Html.ValidationMessage("CaptchaCode", "", new { @class = "text-danger" })<br /><br />

                <div class="text-center">
                <input type="submit" value="Registrarse" class="btn btn-primary" /><br/>
                </div>
              
            }

        </div>
    </div>   
 </div>
@model TPFinalProgWebIII.Models.View.TareaVal
<div><h2>Crea una nueva tarea</h2></div>
<div class="centrado">

    <div class="fondo_formu">
        <div class="recuadre">
       
            @using (@Html.BeginForm("Crear", "Tareas", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
               
                    @Html.LabelFor(model => model.Nombre)<br />
                    @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })<br />
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })<br />

                    @Html.LabelFor(model => model.Descripcion)<br />
                    @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control" })<br />
                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })<br />

                   <text>Carpeta: <br/></text>
              
                    @Html.DropDownListFor(model => model.IdCarpeta, new SelectList(ViewBag.carpetas,"IdCarpeta","Nombre"), "Elija carpeta")<br/><br />
                    @Html.ValidationMessageFor(model => model.IdCarpeta, "", new { @class = "text-danger" })<br />
                       <text>Prioridad : <br /></text>
                    @Html.EnumDropDownListFor(model => model.Prioridad)<br/><br />
                    


                    <text>Horas estimadas:  <br /></text>
                <div class="input-group">
                    <span class="input-group-addon">Hs</span>
                    @Html.TextBoxFor(model => model.EstimadoHoras, new { @class = "form-control", placeholder = "ej: 24.59", type = "number", max = "24", min = "0" })<br />
                   
                    </div>
                    @Html.ValidationMessageFor(model => model.EstimadoHoras, "", new { @class = "text-danger" })<br />
                    <br/>
                    <div class="text-center">
                        <input type="submit" value="Crear" class="btn btn-primary" /><br />
                    </div>
                    }
                </div>
    </div>
</div>




@using System.Web.Optimization;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MyFolder</title>

    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/bootstrapcss")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/css/general.css" type="text/css">
    <link rel="stylesheet" href="~/Content/css/Carpetas.css" type="text/css">
    <link rel="stylesheet" href="~/Content/css/Login.css" type="text/css">
    <link rel="stylesheet" href="~/Content/css/Home.css" type="text/css">
    <link rel="stylesheet" href="~/Content/css/Registro.css" type="text/css">
</head>
<body>

    @Html.Partial("Partial_navBar")

    <!--cuerpo-->

    <div class="container container-fluid d-flex">
        @RenderBody()
        <hr />

        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Content/js/jquery-1.10.2.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>

    <script src="~/Content/js/jquery.validate.min.js"></script>
    <script src="~/Content/js/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>